@page
@model WaterLogger.Pages.CreateModel
@{
}
<h2>Add New Employee</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="employee.Name">Name</label>
        <input type="text" asp-for="employee.Name" class="form-control"  placeholder="John">
    </div>
    <div class="form-group">
        <label asp-for="employee.Surname">Name</label>
        <input type="text" asp-for="employee.Surname" class="form-control"  placeholder="Smith">
    </div>
    <div class="form-group">
        <label asp-for="employee.Salary">Monthly Salary</label>
        <input type="number" asp-for="employee.Salary" class="form-control"  placeholder="2500">   
       </div>
    <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}